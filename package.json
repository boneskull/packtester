{
  "name": "smoke-test",
  "version": "0.0.0",
  "description": "Test your package as it would be installed by a consumer",
  "main": "src/index.js",
  "scripts": {
    "posttest": "markdownlint \"*.md\" && eslint .",
    "test": "nyc mocha \"test/**/*.spec.js\"",
    "release": "standard-version -a"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/smoke-test"
  },
  "keywords": [
    "testing",
    "smoke",
    "check",
    "sanity",
    "pack",
    "publish",
    "release",
    "prerelease"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "smoke": "src/cli.js"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "debug": "^4.1.1",
    "execa": "^4.0.1",
    "read-pkg-up": "^7.0.1",
    "tmp-promise": "^3.0.2",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "markdownlint-cli": "^0.19.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "standard-version": "^7.1.0",
    "unexpected": "^11.14.0",
    "unexpected-sinon": "^10.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "endOfLine": "auto",
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
